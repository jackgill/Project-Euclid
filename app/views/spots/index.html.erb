<h1>Listing spots</h1>

<table>
  <tr>
    <th>Building</th>
    <th>Floor</th>
    <th>Number</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.building.name %></td>
    <td><%= spot.floor %></td>
    <td><%= spot.number %></td>
    <td><%=format_user(spot.owner) %></td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

