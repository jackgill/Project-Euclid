<h1>Listing buildings</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buildings.each do |building| %>
  <tr>
    <td><%= building.name %></td>
    <td><%= building.address %></td>
    <td><%= link_to 'Show', building, class: 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Edit', edit_building_path(building), class: 'btn btn-info btn-mini' %></td>
    <td><%= link_to 'Destroy', building, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Building', new_building_path, class: 'btn btn-primary' %>
