<%= form_for(@shown_user) do |f| %>
  <% if @shown_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shown_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @shown_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :login %>
    <%= f.text_field :login, :autocomplete => :off %>

    <%= f.label :password %>
    <%= f.password_field :password, :size => 40 %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :size => 40 %>


  <% if @user && @user.is_admin %>
    <%= f.label :is_admin %>
    <%= f.check_box :is_admin %>
  <% end %>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
