source 'http://rubygems.org'

gem 'rails', '3.2.0'
gem 'pg'
gem 'minitest'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.2.3"
  gem 'coffee-rails', "~> 3.2.1"
  gem 'uglifier', '>= 1.0.3'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
  gem 'sqlite3'
end

group :production do
  gem 'thin'
end