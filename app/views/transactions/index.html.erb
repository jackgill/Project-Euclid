<h1>Listing transactions</h1>

<table class="table">
  <tr>
    <th>Spot</th>
    <th>Buyer</th>
    <th>Seller</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= format_spot(transaction.spot) %></td>
    <td><%= format_user(transaction.buyer) %></td>
    <td><%= format_user(transaction.seller) %></td>
    <td><%= transaction.start_date %></td>
    <td><%= transaction.end_date %></td>
    <td><%= transaction.price %></td>
    <td><%= link_to 'Show', transaction, class: 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction), class: 'btn btn-info btn-mini' %></td>
    <td><%= link_to 'Destroy', transaction, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-primary' %>
