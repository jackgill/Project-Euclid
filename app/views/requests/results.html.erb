<h1>Search Results</h1>

<table>
  <tr>
    <th>Requester</th>
    <th>Bid price</th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= format_user(request.requester) %></td>
    <td><%= request.bid_price %></td>
	<td>
<%= link_to 'Fulfill this request',
:controller => 'requests',
:action => 'fulfill',
:request => request.id,
%>
	</td>
  </tr>
<% end %>
</table>
<br/>

