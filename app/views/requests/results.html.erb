<h1>Requests</h1>

<table class="table">
  <tr>
    <th>Requester</th>
    <th>Bid price</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= format_user(request.requester) %></td>
    <td><%= request.bid_price %></td>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
	<td>
<%= link_to 'Fulfill this request',
{
  :controller => 'requests',
  :action => 'fulfill',
  :request => request.id,
},
{
  class: "btn btn-primary"
}
%>
	</td>
  </tr>
<% end %>
</table>
<br/>

