<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Login</th>
    <th>Is Admin</th>	
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= user.login %></td>
    <td><%= user.is_admin %></td>	
    <td><%= link_to 'Show', user, class: 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info btn-mini' %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

