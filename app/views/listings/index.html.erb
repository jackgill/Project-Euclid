<h1>Listing listings</h1>

<table>
  <tr>
    <th>Lister</th>
    <th>Spot</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Ask price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= format_user(listing.lister) %></td>
    <td><%= format_spot(listing.spot) %></td>
    <td><%= listing.start_date %></td>
    <td><%= listing.end_date %></td>
    <td><%= listing.ask_price %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

