<h1>Listing requests</h1>

<table class="table">
  <tr>
    <th>Requester</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Bid price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= format_user(request.requester) %></td>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.bid_price %></td>
    <td><%= link_to 'Show', request, class: 'btn btn-primary btn-mini' %></td>
    <td><%= link_to 'Edit', edit_request_path(request), class: 'btn btn-info btn-mini' %></td>
    <td><%= link_to 'Destroy', request, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Request', new_request_path, class: 'btn btn-primary' %>
